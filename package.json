{
  "name": "@reflector/reflector-node",
  "version": "0.3.0",
  "private": true,
  "description": "Node server for Reflector, decentralized Stellar price feed oracle",
  "main": "src/index.js",
  "scripts": {
    "start": "cd ./src && node ./index.js",
    "run-dev": "cd ./src && cross-env NODE_ENV=development nodemon ./index.js",
    "run-docker-cluster": "cd ./src && node ./tests/run-cluster.js",
    "build": "node ./build.js",
    "build-docker-stanalone-image": "docker build -f ./docker/Dockerfile -t reflector-node-dev .",
    "test": "jest"
  },
  "author": "team@stellar.expert",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/reflector-network/reflector-node",
    "type": "git"
  },
  "devDependencies": {
    "@stellar-expert/eslint-config-js": "github:stellar-expert/eslint-config-js",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0"
  },
  "dependencies": {
    "@reflector/oracle-client": "github:reflector-network/oracle-client#v3.2.1",
    "@reflector/reflector-coinmarketcap-connector": "github:reflector-network/reflector-coinmarketcap-connector#v0.1.0",
    "@reflector/reflector-db-connector": "github:reflector-network/reflector-db-connector#v1.2.0",
    "@reflector/reflector-shared": "github:reflector-network/reflector-shared#v1.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lowdb": "^6.1.1",
    "mongoose": "^7.2.0",
    "pino": "^8.15.1",
    "rotating-file-stream": "^3.2.1",
    "sha.js": "^2.4.11",
    "@stellar/stellar-sdk": "11.2.0",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  }
